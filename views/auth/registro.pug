extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl= pagina

        if errores
            div(class="max-w-md mx-auto my-10") 
                each error in errores
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        if autenticado 
            p Usuario autenticado
        else
            .mt-8.mx-auto.max-w-md
                .bg-white.py-8.px-4.shadow-md
                    form.space-y-5(method="POST" action="/auth/registro" noValidate)
                        input(type="hidden" name="_csrf" value=csrfToken)
                        div
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Nombre
                            input#correo.w-full.px-3.py-2.border.border-gray-300(placeholder="Jhon Doe" type="text" name="nombre" value= usuario ? usuario.nombre : "")
                        div
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="correo") Correo electrónico
                            input#correo.w-full.px-3.py-2.border.border-gray-300(placeholder="jhon.doe@midominio.com" type="email" name="correo" value= usuario ? usuario.correo : "")
                        div
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Contarseña
                            input#correo.w-full.px-3.py-2.border.border-gray-300(placeholder="Mínimo 6 caracteres" type="password" name="password" )
                        div
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password2") Repetir contarseña
                            input#correo.w-full.px-3.py-2.border.border-gray-300(placeholder="Mínimo 6 caracteres" type="password" name="password2" )
                        input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear cuenta")
                        .flex.items-center.justify-between  
                            a.text-gray-500(href="/auth/login") Iniciar sesión
                            a.text-gray-500(href="/auth/recuperarCuenta") Recuperar cuenta