extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl= pagina

        div.mt-8
            if autenticado 
                p Usuario autenticado
            else
                .mt-8.mx-auto.max-w-md
                    .bg-white.py-8.px-4.shadow-md
                        form.space-y-5
                            div
                                label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="correo") Correo electrónico
                                input#correo.w-full.px-3.py-2.border.border-gray-300(placeholder="jhon.doe@midominio.com" type="email" name="correo" required)
                            div
                                label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Contarseña
                                input#correo.w-full.px-3.py-2.border.border-gray-300(placeholder="Mínimo 8 caracteres" type="password" name="password" required)
                            div
                                label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Repetir contarseña
                                input#correo.w-full.px-3.py-2.border.border-gray-300(placeholder="Mínimo 8 caracteres" type="password" name="password2" required)